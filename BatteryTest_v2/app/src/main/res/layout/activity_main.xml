<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2b2b2b">

    <ProgressBar
        android:id="@+id/progressbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:progress="50"
        android:progressDrawable="@drawable/myprogressbar"
        />

    <TextView
        android:id="@+id/batterypowerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressbar"
        android:layout_alignStart="@+id/progressbar"
        android:layout_alignLeft="@+id/progressbar"
        android:layout_marginStart="107dp"
        android:layout_marginLeft="107dp"
        android:text="Battery Power:"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/batterypowerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_below="@+id/progressbar"
        android:layout_toRightOf="@+id/batterypowerTxt"
        android:layout_toEndOf="@+id/batterypowerTxt"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <Button
        android:id="@+id/decreasebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="45dp"
        android:layout_toLeftOf="@+id/batterypowerValue"
        android:layout_toStartOf="@+id/batterypowerValue"
        android:text="-5" />

    <Button
        android:id="@+id/increasebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/decreasebutton"
        android:layout_toEndOf="@+id/decreasebutton"
        android:layout_toRightOf="@+id/decreasebutton"
        android:text="+5" />

    <ImageView
        android:id="@+id/BatteryImage"
        android:layout_width="184dp"
        android:layout_height="150dp"
        android:layout_above="@+id/progressbar"
        android:layout_centerInParent="true"
        android:layout_marginBottom="74dp"
        app:srcCompat="@drawable/battery100" />

</RelativeLayout>